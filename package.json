{
  "name": "markup-ai-github-action",
  "version": "1.2.2",
  "private": false,
  "description": "Markup AI GitHub Action",
  "keywords": [
    "actions"
  ],
  "homepage": "https://github.com/markupai/content-guardian-action",
  "bugs": {
    "url": "https://github.com/markupai/content-guardian-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markupai/content-guardian-action.git"
  },
  "license": "Apache-2.0",
  "author": "Markup AI",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "all": "npm run lint:check && npm run test:coverage && npm run bundle",
    "bundle": "npm run format:fix && npm run package",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "local-action": "@github/local-action . src/main.ts .env",
    "package": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@actions/core": "2.0.2",
    "@actions/github": "7.0.0",
    "@markupai/toolkit": "2.2.3",
    "octokit": "5.0.5"
  },
  "devDependencies": {
    "@github/local-action": "7.0.0",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "25.0.9",
    "@vitest/coverage-v8": "4.0.17",
    "eslint": "9.39.2",
    "prettier": "3.8.0",
    "prettier-plugin-packagejson": "2.5.22",
    "rollup": "4.55.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.1",
    "vitest": "4.0.17"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "engines": {
    "node": ">=24"
  }
}

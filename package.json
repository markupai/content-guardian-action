{
  "name": "markup-ai-github-action",
  "version": "1.2.1",
  "private": false,
  "description": "Markup AI GitHub Action",
  "keywords": [
    "actions"
  ],
  "homepage": "https://github.com/markupai/content-guardian-action",
  "bugs": {
    "url": "https://github.com/markupai/content-guardian-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markupai/content-guardian-action.git"
  },
  "license": "Apache-2.0",
  "author": "Markup AI",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "all": "npm run lint:check && npm run test && npm run coverage && npm run bundle",
    "bundle": "npm run format:fix && npm run package",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "local-action": "@github/local-action . src/main.ts .env",
    "package": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1",
    "@markupai/toolkit": "2.2.0",
    "octokit": "5.0.5"
  },
  "devDependencies": {
    "@github/local-action": "6.0.2",
    "@jest/globals": "30.2.0",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "jest": "30.2.0",
    "prettier": "3.7.4",
    "prettier-plugin-packagejson": "2.5.20",
    "rollup": "4.53.3",
    "ts-jest": "29.4.6",
    "ts-jest-resolver": "2.0.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "engines": {
    "node": ">=24"
  }
}

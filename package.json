{
  "name": "markup-ai-github-action",
  "version": "1.2.0",
  "private": false,
  "description": "Markup AI GitHub Action",
  "keywords": [
    "actions"
  ],
  "homepage": "https://github.com/markupai/content-guardian-action",
  "bugs": {
    "url": "https://github.com/markupai/content-guardian-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markupai/content-guardian-action.git"
  },
  "license": "Apache-2.0",
  "author": "Markup AI",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "all": "npm run lint && npm run test && npm run coverage && npm run bundle",
    "bundle": "npm run format && npm run package",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "local-action": "@github/local-action . src/main.ts .env",
    "package": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@markupai/toolkit": "^2.0.1",
    "octokit": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^6.0.0",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "rollup": "^4.52.4",
    "ts-jest": "^29.4.5",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "engines": {
    "node": ">=24"
  }
}
